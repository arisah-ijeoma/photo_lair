<div class="flex-justify-between">
  <div class="form-side">
    <div class="bg-login padding-10px">
      Login
    </div>

    <div class="padding-10px">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <p>
            <%= f.input :email,
                required: false,
                label_html: { class: 'label-display' },
                input_html: { autocomplete: "email", class: 'input-width' } %>
          </p>

          <p>
            <%= f.input :password,
                required: false,
                label_html: { class: 'label-display' },
                input_html: { autocomplete: "current-password", class: 'input-width' } %>
          </p>
        </div>

        <div>
          <%= f.button :submit, "Log in", class: 'auth-btn' %>
        </div>
      <% end %>

      <p>Create an account <%= render "devise/shared/links" %></p>
    </div>
  </div>

  <div class="note-side padding-10px">
    I am the note about how good this app is!
  </div>
</div>
