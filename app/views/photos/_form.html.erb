<%= simple_form_for @photo, html: { multipart: true } do |f| %>
  <%= @photo.errors.full_messages.join(' ') unless @photo.errors.empty?%>
  <div class="padding-10px">
    <label>Image</label>
    <%= f.file_field :image %>
  </div>

  <div class="padding-10px">
    <%= f.input :caption %>
  </div>

  <%= f.button :submit %>
<% end %>
